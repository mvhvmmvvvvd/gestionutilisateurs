package model;

import java.util.ArrayList;
import java.util.List;

public class ClientDAO {
    private List<Client> clients;

    public ClientDAO() {
        this.clients = new ArrayList<>();
        // Exemple de donn√©es initiales
        clients.add(new Client(1, "Jean Dupont", "jean.dupont@example.com"));
        clients.add(new Client(2, "Marie Curie", "marie.curie@example.com"));
    }

    public List<Client> getAllClients() {
        return clients;
    }

    public void addClient(Client client) {
        clients.add(client);
    }

    public void updateClient(int id, Client updatedClient) {
        for (Client client : clients) {
            if (client.getId() == id) {
                client.setName(updatedClient.getName());
                client.setEmail(updatedClient.getEmail());
                break;
            }
        }
    }

    public void deleteClient(int id) {
        clients.removeIf(client -> client.getId() == id);
    }

    public Client getClient(int id) {
        for (Client client : clients) {
            if (client.getId() == id) {
                return client;
            }
        }
        return null;
    }
}